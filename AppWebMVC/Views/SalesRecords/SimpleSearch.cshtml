@model IEnumerable<AppWebMVC.Models.SalesRecord>

@{
    ViewData["Title"] = "Busca de vendas simples";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data inicial</label>
                    <input type="date" name="minDate" class="form-control" value=@ViewData["minDate"] />
                </div>
                 <div class="form-group">
                    <label for="maxDate">Data final</label>
                    <input type="date" name="maxDate" class="form-control" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-default">
                Pesquisar
            </button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de vendas = @Model.Sum(item => item.Amount).ToString("C")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="default">
                    <th>Id</th>
                    <th>Data</th>
                    <th>Vendedor</th>
                    <th>Departamento</th>
                    <th>Valor total (R$)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach(SalesRecord item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Department.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.BaseSalary)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>