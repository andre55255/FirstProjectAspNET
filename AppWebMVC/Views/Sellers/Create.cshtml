@model AppWebMVC.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Criar";
}

<h2 class="pt-1">@ViewData["Title"]</h2>

<h4>Vendedor</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Nome</label>
                <input asp-for="Seller.Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" autocomplete="off" type="email" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">Data de nascimento</label>
                <input asp-for="Seller.BirthDate" class="form-control" type="date" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Salário base (R$)</label>
                <input asp-for="Seller.BaseSalary" class="form-control" type="number" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Selecione o departamento</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id","Name"))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">
                    Criar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}