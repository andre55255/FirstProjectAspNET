@model AppWebMVC.Models.Seller;

@{
    ViewData["Title"] = "Detalhes de vendedor";
}

<div class="row">
    <h2>@ViewData["Title"]</h2>
    <dl class="dl-horizontal">
        <dt>Nome</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>Email:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <dt>Data de aniversário:</dt>
        <dd>@Html.DisplayFor(model => model.BirthDate)</dd> 
        <dt>Salário base:</dt>
        <dd>@Html.DisplayFor(model => model.BaseSalary)</dd>
        <dt>Departamento:</dt>
        <dd>@Html.DisplayFor(model => model.Department.Name)</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        Editar
    </a>
    |
    <a asp-action="Index" class="btn btn-default">
        Retornar a lista
    </a>
</div>